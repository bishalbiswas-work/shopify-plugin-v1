<!-- Button linking to the blog subdomain of the current domain -->
<div>
    <p style="font-size:  14px;font-weight: 700; color: #1F2732; margin: 0 !important; ">
        <a id="dynamicLink" 
            style="font-weight: 700; color: #1F2732; text-decoration: none !important;  border-bottom: 1px solid #1F2732;">Blog</a>
        <span
            style="display: inline-flex; align-items: center; height: 20px; background-color: #7B68EE; color: white; font-size: 8px; padding: 0 5px; border-radius: 10px; margin-left: 5px; font-weight: 700;">NEW</span>
    </p>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var currentDomain = window.location.origin;
        var domainParts = currentDomain.split("//");
        var finalUrl = domainParts[0] + "//blog." + domainParts[1];
        document.getElementById('dynamicLink').setAttribute('href', finalUrl);
    });
</script>


